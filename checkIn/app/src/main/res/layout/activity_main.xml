<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="org.capstone.android.checkin.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorTopBlack"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="casual"
            android:text="Check - In"
            android:textAlignment="center"
            android:textColor="@color/colorTextWhite"
            android:textSize="40dp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="16dp"
            android:text="Check-In 은\n당신의 계정을 안전하게 관리합니다."
            android:textColor="@color/colorTextWhite"
            android:textSize="18dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="100dp"
            android:text="원격 로그아웃, 1회용 번호생성\nOTP생성, 접속 로그확인을 사용하세요."
            android:textColor="@color/colorTextWhite"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="2px"
        android:background="@color/colorMenuLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:clickable="true"
                android:onClick="moveRemoteLogoutActivity"
                android:orientation="vertical"
                android:weightSum="0.5">


                <ImageView
                    android:id="@+id/tmp1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="70dp"
                    app:srcCompat="@drawable/ic_remotelogout_image1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tmp1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="-35dp"
                    android:text="원격로그아웃"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="16dp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:clickable="true"
                android:onClick="moveCreateOTPActivity"
                android:orientation="vertical"
                android:weightSum="0.5">


                <ImageView
                    android:id="@+id/tmp2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="70dp"
                    app:srcCompat="@drawable/ic_remotelogout_image1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tmp2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="-35dp"
                    android:text="원격로그아웃"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="16dp" />


            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="2px"
            android:background="@color/colorMenuLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/moveCreateLoginNumberButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:onClick="moveCreateLoginNumberActivity"
                app:srcCompat="@mipmap/ic_launcher" />

            <View
                android:layout_width="2px"
                android:layout_gravity="center"
                android:layout_height="220dp"
                android:background="@color/colorMenuLine" />


            <ImageButton
                android:id="@+id/moveAccessLogButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:onClick="moveAccessLogActivity"
                app:srcCompat="@mipmap/ic_launcher" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>